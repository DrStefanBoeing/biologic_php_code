{% extends 'portal/partials/layout.portal.twig' %}

{% block content %}

    <h1 class="text-center">Experiments</h1>
    <br><br>

    <table class="table table-striped table-bordered biologic-data-table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Code</th>
            <th>Project</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for experiment in experiments %}
            <tr>
                <td>{{ experiment.id }}</td>
                <td>{{ experiment.name }}</td>
                <td>{{ experiment.experiment_code }}</td>
                <td>{{ experiment.project.name }}</td>
                <td>{{ experiment.created_at }}</td>
                <td>
                    <a href="{{ url('/manage/experiments/'~experiment.id) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ url('/manage/experiments/create') }}" class="btn btn-default form-control">New Experiment</a>

{% endblock %}

