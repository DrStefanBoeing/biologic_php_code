{% extends 'portal/partials/layout.portal.twig' %}

{% block content %}

    {% include 'partials/flash.twig' %}

    <h1 class="text-center">Create experiment</h1>
    <br><br>

    <form class="form-horizontal" method="POST">

        <div class="form-group">
            <label for="name" class="control-label col-sm-2">Name</label>
            <div class="col-sm-10">
                <input type="text" id="name" name="name" class="form-control" value="{{ old('name') }}" />
            </div>
        </div>

        <div class="form-group">
            <label for="experiment_code" class="control-label col-sm-2">Experiment Code</label>
            <div class="col-sm-10">
                <input type="text" id="experiment_code" name="experiment_code" class="form-control" value="{{ old('experiment_code') }}" />
            </div>
        </div>

        <div class="form-group">
            <label for="project_id" class="control-label col-sm-2">Project</label>
            <div class="col-sm-10">
                <select class="form-control" name="project_id" id="project_id">
                    {% for project in projects %}
                        <option value="{{ project.id }}" {% if project.id == old('project_id') %} selected {% endif %} >{{ project.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="main_question" class="control-label col-sm-2">Main Question</label>
            <div class="col-sm-10">
                <input type="text" id="main_question" name="main_question" class="form-control" value="{{ old('main_question') }}" />
            </div>
        </div>

        <div class="form-group">
            <label for="lead_scientist" class="control-label col-sm-2">Lead Scientist</label>
            <div class="col-sm-10">
                <input type="text" id="lead_scientist" name="lead_scientist" class="form-control" value="{{ old('lead_scientist') }}" />
            </div>
        </div>

        <div class="form-group">
            <label for="description" class="control-label col-sm-2">Description</label>
            <div class="col-sm-10">
                <textarea name="description" id="description" class="form-control" rows="3">{{ old('description') }}</textarea>
            </div>
        </div>

        <button type="submit" class="btn btn-default form-control">Create</button>

    </form>

{% endblock %}