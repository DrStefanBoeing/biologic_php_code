{% extends 'portal/partials/layout.portal.twig' %}

{% block content %}

    <h1 class="text-center">Projects</h1>
    <br><br>

    <table class="table table-striped table-bordered biologic-data-table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name }}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.created_at }}</td>
                <td>
                    <a href="{{ url('/manage/projects/'~project.id) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ url('/manage/projects/create') }}" class="btn btn-default form-control">New Project</a>

{% endblock %}

