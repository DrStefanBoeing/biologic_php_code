{% extends 'portal/partials/layout.portal.twig' %}

{% block content %}

    {% include 'partials/flash.twig' %}

    <h1 class="text-center">User access for {{ project.name }}</h1>
    <br><br>

    <form method="POST">
        <table class="table table-striped table-bordered biologic-data-table">
            <thead>
            <tr>
                <th>User</th>
                <th>Read access</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>
                        <input type="checkbox" name="read[{{ user.id }}]" {% if user.hasReadPermission(project) %} checked="checked" {% endif %} />
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <button type="submit" class="btn btn-default form-control">Update access</button>
    </form>



{% endblock %}

